<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="bpPrincipal" style="-fx-background-color: #000080;" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MenuController">
   <center>
      <Pane prefHeight="600.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="150.0" layoutY="249.0" text="Bus System" textAlignment="CENTER" textFill="RED">
               <font>
                  <Font name="AR DESTINE" size="90.0" />
               </font>
            </Label>
         </children>
      </Pane>
   </center>
   <top>
      <MenuBar style="-fx-background-color: red;" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastro">
            <items>
              <MenuItem fx:id="mmiEmpresa" mnemonicParsing="false" onAction="#MenuEmpresa" text="Cadastro de Empresa" />
                  <MenuItem fx:id="mmiVeiculo" mnemonicParsing="false" onAction="#MenuVeiculo" text="Cadastro de Veiculo" />
                  <MenuItem fx:id="mmiFuncionario" mnemonicParsing="false" onAction="#MenuFuncionario" text="Cadastro de Funcionario" />
                  <MenuItem fx:id="mmiManutencao" mnemonicParsing="false" onAction="#MenuManutencao" text="Cadastro de Manutenção" />
                  <MenuItem fx:id="mniUsuario" mnemonicParsing="false" onAction="#MenuUsuario" text="Cadastro De Usuario" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Viagem">
            <items>
              <MenuItem fx:id="mmiControleFinanceiro" mnemonicParsing="false" onAction="#MenuControleFinanceiro" text="Salvar Viagem" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Manutenção">
            <items>
              <MenuItem fx:id="mmiDespesas" mnemonicParsing="false" onAction="#MenuDespesas" text="Despesas" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
